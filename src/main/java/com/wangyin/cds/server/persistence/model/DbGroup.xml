<?xml version="1.0" encoding="UTF-8" ?>    
<!DOCTYPE mapper    
PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"    
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="com.wangyin.cds.server.persistence.DbGroupDAO">

	<resultMap type="com.wangyin.cds.server.persistence.model.DbGroup" id="DbgroupResult">  
		<id column="db_group_id" property="dbGroupId"/>
		<result column="group_name" property="groupName"/>
		<result column="create_by" property="createBy"/>
		<result column="creation_date" property="creationDate"/>
		<result column="modified_by" property="modifiedBy"/>
		<result column="modification_date" property="modificationDate"/>
		<result column="delete_status" property="deleteStatus"/>
		<result column="db_type" property="dbType"/>
    </resultMap>
	
	<sql id="columnsSql">
		db_group_id,
		group_name,
		create_by,
		creation_date,
		modified_by,
		modification_date,
		delete_status,
		db_type
	</sql>
	
	<sql id="whereSql">
		<where>
			<if test="dbgroup !=null">
				<if test="dbgroup.groupName!=null">
					and group_name = #{dbgroup.groupName}
				</if>
				<if test="dbgroup.createBy!=null">
					and create_by = #{dbgroup.createBy}
				</if>
				<if test="dbgroup.creationDate!=null">
					and creation_date = #{dbgroup.creationDate}
				</if>
				<if test="dbgroup.modifiedBy!=null">
					and modified_by = #{dbgroup.modifiedBy}
				</if>
				<if test="dbgroup.modificationDate!=null">
					and modification_date = #{dbgroup.modificationDate}
				</if>
				<if test="dbgroup.deleteStatus!=null">
					and delete_status = #{dbgroup.deleteStatus}
				</if>
				<if test="dbgroup.dbType!=null">
					and db_type = #{dbgroup.dbType}
				</if>
			</if>
		</where>
	</sql>
	
	<select id="getPageList" resultMap="DbgroupResult">
		select * from (select row_.*, rownum rownum_ from (
			select 
			<include refid="columnsSql"/>
			from DBGROUP
			<include refid="whereSql"/>
		<![CDATA[
      	)  row_ where rownum <= #{limit} + #{start}) where rownum_ > #{start} 
		]]>
	</select>
	
	<select id="count" resultType="java.lang.Integer">
		select count(*) from DBGROUP
		<include refid="whereSql"/>
	</select>
	
	<select id="query" resultMap="DbgroupResult">
		select 
		<include refid="columnsSql"/>
		from DBGROUP
		<include refid="whereSql"/>
	</select>

	<select id="load" resultMap="DbgroupResult">
		select 
		<include refid="columnsSql"/>
		from DBGROUP
		where db_group_id=#{dbGroupId}
	</select>

	<update id="update">
		update DBGROUP
		<set>
			<if test="dbgroup.groupName != null">group_name=#{dbgroup.groupName},</if>
			<if test="dbgroup.createBy != null">create_by=#{dbgroup.createBy},</if>
			<if test="dbgroup.creationDate != null">creation_date=#{dbgroup.creationDate},</if>
			<if test="dbgroup.modifiedBy != null">modified_by=#{dbgroup.modifiedBy},</if>
			<if test="dbgroup.modificationDate != null">modification_date=#{dbgroup.modificationDate},</if>
			<if test="dbgroup.deleteStatus != null">delete_status=#{dbgroup.deleteStatus},</if>
			<if test="dbgroup.dbType != null">db_type=#{dbgroup.dbType}</if>
		</set>
		where db_group_id=#{dbgroup.dbGroupId}
	</update>

	<insert id="insert" keyProperty="dbgroup.dbGroupId">
		insert into DBGROUP(
			db_group_id
			<if test="dbgroup.groupName!=null">
				,group_name
			</if>
			<if test="dbgroup.createBy!=null">
				,create_by
			</if>
			<if test="dbgroup.creationDate!=null">
				,creation_date
			</if>
			<if test="dbgroup.modifiedBy!=null">
				,modified_by
			</if>
			<if test="dbgroup.modificationDate!=null">
				,modification_date
			</if>
			<if test="dbgroup.deleteStatus!=null">
				,delete_status
			</if>
			<if test="dbgroup.dbType!=null">
				,db_type
			</if>
		) values(
			 #{dbgroup.dbGroupId}
			<if test="dbgroup.groupName!=null">
				 ,#{dbgroup.groupName}
			</if>
			<if test="dbgroup.createBy!=null">
				 ,#{dbgroup.createBy}
			</if>
			<if test="dbgroup.creationDate!=null">
				 ,#{dbgroup.creationDate}
			</if>
			<if test="dbgroup.modifiedBy!=null">
				 ,#{dbgroup.modifiedBy}
			</if>
			<if test="dbgroup.modificationDate!=null">
				 ,#{dbgroup.modificationDate}
			</if>
			<if test="dbgroup.deleteStatus!=null">
				 ,#{dbgroup.deleteStatus}
			</if>
			<if test="dbgroup.dbType!=null">
				 ,#{dbgroup.dbType}
			</if>
		)
	</insert>

	<delete id="delete">
		delete from DBGROUP
		where db_group_id=#{dbGroupId}
	</delete>

</mapper> 